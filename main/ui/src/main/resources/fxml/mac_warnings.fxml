	<padding><Insets top="12.0" right="12.0" bottom="12.0" left="12.0"/></padding>

	<children>
		<Label text="%macWarnings.message" />
		<ListView fx:id="warningsList" VBox.vgrow="ALWAYS" focusTraversable="false" />
